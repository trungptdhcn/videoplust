<?xml version="1.0" encoding="utf-8"?>
<com.trungpt.videoplus.ui.customview.CheckableRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_video_playlist_rlContainer"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/gray_21"
        >
    <RelativeLayout
            android:id="@+id/item_video_playlist_rlThumbnail"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:padding="@dimen/spacing_small"
            >
        <ImageView
                android:id="@+id/item_video_playlist_ivThumbnail"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/test2"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
        <TextView
                android:id="@+id/item_video_playlist_tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2:00"
                android:background="@drawable/bg_duration"
                android:paddingLeft="@dimen/spacing_mini"
                android:textSize="@dimen/text_size_small"
                android:paddingRight="@dimen/spacing_mini"
                android:paddingTop="@dimen/spacing_mini"
                android:paddingBottom="@dimen/spacing_mini"
                android:layout_margin="@dimen/spacing_mini"
                />
    </RelativeLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_video_playlist_rlThumbnail"
            android:paddingTop="@dimen/spacing_small"
            android:paddingLeft="@dimen/spacing_small"
            >
        <TextView
                android:id="@+id/item_video_playlist_tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/text_size_smaller"
                android:layout_alignParentTop="true"
                android:text="Sample Text"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>
        <TextView
                android:id="@+id/item_video_playlist_tvUserName"
                android:textColor="@color/white_smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_video_playlist_tvName"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_small"
                android:drawableLeft="@drawable/ic_author"
                android:drawablePadding="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_mini"/>
    </RelativeLayout>
    <com.trungpt.videoplus.ui.customview.InertCheckBox
            android:id="@+id/item_video_playlist_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="false"/>
</com.trungpt.videoplus.ui.customview.CheckableRelativeLayout>