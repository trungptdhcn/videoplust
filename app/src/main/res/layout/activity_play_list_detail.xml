<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:context="com.trungpt.downloadmaster.ui.activity.YoutubeVideoDetailActivity">
    <fragment
            android:name="com.google.android.youtube.player.YouTubePlayerFragment"
            android:id="@+id/activity_play_list_detail_youtube_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
    <FrameLayout
            android:id="@+id/activity_play_list_detail_layout_video_related"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_play_list_detail_youtube_fragment"
            />
    <RelativeLayout
            android:id="@+id/activity_play_list_detail_rlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@color/gray_21"
            android:layout_below="@id/activity_play_list_detail_layout_video_related"
            android:padding="@dimen/spacing_small"
            >
        <TextView
                android:id="@+id/activity_play_list_detail_tvTitleOfPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung dai ca"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/activity_play_list_detail_cbExpand"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                />
        <TextView
                android:id="@+id/activity_play_list_detail_tvVideoCountOfPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung dai ca"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/activity_play_list_detail_cbExpand"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:layout_below="@id/activity_play_list_detail_tvTitleOfPlayList"
                />
        <CheckBox
                android:id="@+id/activity_play_list_detail_cbExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_expanded"
                android:button="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>
    <!--<include-->
            <!--layout="@layout/layout_list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_below="@id/activity_play_list_detail_rlContainer"-->
            <!--/>-->
    <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:listSelector="#00000000"
            android:layout_below="@id/activity_play_list_detail_rlContainer"/>
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
</RelativeLayout>
